@page
@model dockerApp.Pages.LoginModel
@{
	ViewData["Title"] = "Login";
}

<!DOCTYPE>
<html>

<head>
	<title>Log in</title>
	<link rel="stylesheet" href="style.css">
</head>

<body>
	<img src="longCat.png" class="longCatBicycle"/>
	<div class="wrapper">
		<header>
			<div class="header">
				<div class="leftHeader">
					<img src="index.png"/>

					<div class="container">
						Converter
						<a asp-page="Index">
							<span class="link"></span>
						</a>
					</div>
					<div class="container">
						About
						<a asp-page="About">
							<span class="link"></span>
						</a>
					</div>
				</div>
				<div class="rightHeader"> 
					<div class="container">
						Log in
						<a asp-page="Login">
							<span class="link"></span>
						</a>
					</div>
				</div>
			</div>
		</header>

		<div class="main">

			<div class="containerLogin">
				<label for="uname"><b>Username</b></label>
				<input type="text" placeholder="Enter Username" name="uname" required class="nameBox">

				<label for="psw"><b>Password</b></label>
				<input type="password" placeholder="Enter Password" name="psw" required class="nameBox">

				<button type="submit" class="loginButton">Login</button>
				<label>
					<input type="checkbox" checked="checked" name="remember"> Remember me
				</label>
			</div> 
		</div>

		<footer>
			<p>
				Saint-Petersburg state institute of technology (Technological university)
			</p>
			<p>
				2023
			</p>
		</footer>
	</div>
</body>

</html>
